  # pool
  pool {
<% if @allow_members_of -%>
<% @allow_members_of.each do |member| -%>
    allow members of "<%= member %>";
<%end-%>
<% end -%>
<% if @deny_members_of -%>
<% @deny_members_of.each do |member| -%>
    deny members of "<%= member %>";
<%end%>
<% end -%>
<% if @allow_known_clients == true -%>
    allow known-clients;
<%end-%>
<% if @allow_unknown_clients == true -%>
    allow unknown-clients;
<%end-%>
<% if @allow_dynamic_bootp_clients == true -%>
    allow dynamic bootp clients;
<%end-%>
<% if @allow_all_clients == true -%>
    allow known-clients;
<%end-%>
<% if @deny_known_clients == true -%>
    deny known-clients;
<%end-%>
<% if @deny_unknown_clients == true -%>
    deny unknown-clients;
<%end-%>
<% if @deny_dynamic_bootp_clients == true -%>
    deny dynamic bootp clients;
<%end-%>
<% if @deny_all_clients == true -%>
    deny known-clients;
<%end-%>
<% if @default_lease_time -%>
    default-lease-time <%= @default_lease_time -%>;
<%end-%>
<% if @max_lease_time -%>
    max-lease-time <%= @max_lease_time -%>;
<%end-%>
<% if @ranges -%>
<% @ranges.each do |rangedata| -%>
    range <%=rangedata%>;
<%end-%>
<%end-%>
  }
