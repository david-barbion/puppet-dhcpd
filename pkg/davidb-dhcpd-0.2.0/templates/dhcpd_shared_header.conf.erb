
# shared network <%= @name %>
shared-network <%= @name %> {
<% @options.sort.map do |optname,optvalue| -%>
<% if optvalue.is_a?(Array) -%>
  option <%= optname %> <%= optvalue.join(",") %>;
<% else -%>
<% if optname == 'domain-name' or optname == 'filename' -%>
  option <%= optname %> "<%= optvalue %>";
<% else -%>
  option <%= optname %> <%= optvalue %>;
<% end -%>
<% end -%>
<% end -%>
